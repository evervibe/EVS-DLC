{
  "name": "evs-dlc-monorepo",
  "private": true,
  "version": "1.3.0",
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r --workspace-concurrency=1 test -- --ci",
