    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "@fastify/cors": "^8",
      "@fastify/swagger": "^8",
      "@fastify/swagger-ui": "^1",
      "@fastify/static": "^6"
    }
  }
