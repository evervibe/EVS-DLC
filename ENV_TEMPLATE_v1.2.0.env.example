# EVS-DLC Production Environment Configuration
# Version: 1.2.0-stable

# ======================
# API Configuration
# ======================
NODE_ENV=production
API_PORT=30089

# ======================
# Database Configuration
# ======================
# Auth Database
DB_AUTH_HOST=mysql
DB_AUTH_PORT=3306
DB_AUTH_USER=root
DB_AUTH_PASS=CHANGE_ME_SECURE_PASSWORD
DB_AUTH_NAME=db_auth

# Game Database
DB_GAME_HOST=mysql
DB_GAME_PORT=3306
DB_GAME_USER=root
DB_GAME_PASS=CHANGE_ME_SECURE_PASSWORD
DB_GAME_NAME=db_game

# Data Database
DB_DATA_HOST=mysql
DB_DATA_PORT=3306
DB_DATA_USER=root
DB_DATA_PASS=CHANGE_ME_SECURE_PASSWORD
DB_DATA_NAME=db_data

# Post Database
DB_POST_HOST=mysql
DB_POST_PORT=3306
DB_POST_USER=root
DB_POST_PASS=CHANGE_ME_SECURE_PASSWORD
DB_POST_NAME=db_post

# ======================
# MySQL Configuration
# ======================
MYSQL_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD
MYSQL_PORT=3306
MYSQL_DATABASE=db_game

# ======================
# Redis Cache
# ======================
REDIS_URL=redis://redis:6379
REDIS_PORT=6379
USE_CACHE=true
CACHE_TTL=3600

# ======================
# Security
# ======================
# IMPORTANT: Generate a strong secret for production
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=1h
JWT_ALGORITHM=HS256

# ======================
# Docker Configuration
# ======================
ADMINER_PORT=8080
WEB_PORT=5174

# ======================
# CORS Configuration
# ======================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ======================
# Frontend Configuration
# ======================
NEXT_PUBLIC_API_URL=http://localhost:30089
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=1.2.0
NEXT_PUBLIC_DEBUG=false
