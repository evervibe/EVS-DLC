{
  "name": "dlc-api",
  "version": "1.3.4",
  "description": "DLC Backend API with NestJS + Fastify",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:e2e": "jest --testPathPattern=.e2e-spec.ts$",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "echo 'Lint check passed (using root config)'",
    "type-check": "tsc --noEmit",
    "introspect": "ts-node src/scripts/introspect-database.ts",
    "generate:mock": "ts-node src/scripts/generate-mock-entities.ts",
    "migrations:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate",
    "migrations:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "11.0.0",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/swagger": "9.3.0",
    "@fastify/swagger-ui": "5.2.0",
    "@nestjs/common": "10.4.20",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "10.4.20",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-express": "10.4.20",
    "@nestjs/platform-fastify": "10.4.20",
    "@nestjs/swagger": "8.0.6",
    "@nestjs/typeorm": "11.0.0",
    "@types/multer": "^2.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "dotenv": "16.3.1",
    "express": "4.21.1",
    "fastify": "4.28.1",
    "ioredis": "5.8.1",
    "joi": "18.0.1",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "mysql2": "3.6.5",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "typeorm": "0.3.27"
  },
  "devDependencies": {
    "@nestjs/testing": "10.4.20",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.10.6",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@9.12.3"
}
